<div>
  Welcome, <%= @user.first_name %>!
</div>
<button><%= link_to "Edit", edit_user_path(current_user)%></button>
<button><%=link_to "Delete", delete_user_path(current_user), method: :delete%></button>
<hr>

<section id="week-tracker" class="container">
  <h1>Weekly Tracker</h1>
  <ul>
    <li class="row">
      <div class="col s5">
        <p>Task</p>
      </div>
      <div class="col s1">
        <p>Mon</p>
      </div>
      <div class="col s1">
        <p>Tue</p>
      </div>
      <div class="col s1">
        <p>Wed</p>
      </div>
      <div class="col s1">
        <p>Thu</p>
      </div>
      <div class="col s1">
        <p>Fri</p>
      </div>
      <div class="col s1">
        <p>Sat</p>
      </div>
      <div class="col s1">
        <p>Sun</p>
      </div>
    </li>

    <% @weekly_logs.each do |week| %>
      <li>
        <div class="col s5">
          <h4><%=week[:habit]%> </h4>
        </div>
        <div class="col s1">
          <% if week[:week].include?(0) %>
            <i class='material-icons dp48'>check</i>
          <% end %>
        </div>
        <div class="col s1">
          <% if week[:week].include?(1) %>
            <i class='material-icons dp48'>check</i>
          <% end %>
        </div>
        <div class="col s1">
          <% if week[:week].include?(2) %>
            <i class='material-icons dp48'>check</i>
          <% end %>
        </div>
        <div class="col s1">
          <% if week[:week].include?(3) %>
            <i class='material-icons dp48'>check</i>
          <% end %>
        </div>
        <div class="col s1">
          <% if week[:week].include?(4) %>
            <i class='material-icons dp48'>check</i>
          <% end %>
        </div>
        <div class="col s1">
          <% if week[:week].include?(5) %>
            <i class='material-icons dp48'>check</i>
          <% end %>
        </div>
        <div class="col s1">
          <% if week[:week].include?(6) %>
            <i class='material-icons dp48'>check</i>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</section>
