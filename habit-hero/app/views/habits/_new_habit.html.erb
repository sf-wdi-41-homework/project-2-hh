<div id="new-habit-modal" class="modal modal-fixed-footer">
	<div class="modal-content">
		<%= form_with scope: :habit, url: "/habits" do|f|%>
			<div>
				<%= f.text_field :title, class: 'validate', placeholder: "Habit" %>
			</div>
			<div>
				<%= f.text_area :description, class: 'materialize-textarea', placeholder: "Description" %>
			</div>
			<div>
				<%= f.number_field :weekly_goal, class: 'validate', placeholder: "Weekly_goal" %>
			</div>

			<%= f.submit "Save Habit", class: ' waves-effect waves-green btn-flat' %>
		<% end %>
	</div>
	<div class="modal-footer">
		<a class="modal-action modal-close waves-effect waves-green btn-flat ">Cancel</a>
	</div>
</div>
